<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<VBox prefHeight="400.0" prefWidth="500.0" xmlns="http://javafx.com/javafx/17.0.2-ea" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.example.graph_vizualizer.MainController">
   <children>
      <MenuBar minWidth="-Infinity" AnchorPane.leftAnchor="0.0" AnchorPane.topAnchor="0.0" VBox.vgrow="ALWAYS">
        <menus>
          <Menu fx:id="menu_file" mnemonicParsing="false" text="File">
            <items>
                  <MenuItem fx:id="menu_item_choose" mnemonicParsing="false" text="Choose" />
                <MenuItem fx:id="menu_item_open" mnemonicParsing="false" text="Open" />
                <MenuItem fx:id="menu_item_saveas" mnemonicParsing="false" text="Save as" />
            </items>
          </Menu>
          <Menu fx:id="menu_properties" mnemonicParsing="false" text="Properties">
            <items>
                <Menu fx:id="menu_item_graph_pattern" mnemonicParsing="false" text="Graph pattern" />
                <Menu fx:id="menu_item_drawn_pattern" mnemonicParsing="false" text="Drawn pattern" />
            </items>
          </Menu>
        </menus>
      </MenuBar>
      <Pane fx:id="draw_pane" VBox.vgrow="ALWAYS">
         <children>
            <AnchorPane fx:id="graph_pane" />
         </children></Pane>
      <VBox prefHeight="100.0" prefWidth="100.0" AnchorPane.bottomAnchor="0.0" AnchorPane.leftAnchor="0.0">
         <children>
            <Label fx:id="label_folder" text="Folder: " />
            <Label fx:id="label_graph" text="Graph pattern: " />
            <Label fx:id="label_drawn" text="Drawn pattern: " />
            <Button fx:id="button_visualize" mnemonicParsing="false" text="Visualize" />
         </children></VBox>
   </children>
</VBox>
